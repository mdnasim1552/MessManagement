<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!--#region Border -->
    <Style TargetType="Border" Class="PrimaryCardStyle">
        <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
        <Setter Property="BackgroundColor" Value="{StaticResource White}"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="WidthRequest" Value="350"/>
        <Setter Property="MinimumHeightRequest" Value="400"/>
    </Style>
    <Style TargetType="Border" Class="MessWizardCardStyle">
        <Setter Property="Stroke" Value="{StaticResource White}"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
        <Setter Property="BackgroundColor" Value="{StaticResource White}"/>
        <Setter Property="Padding" Value="18"/>
        <Setter Property="Margin" Value="0"/>
    </Style>
    <Style TargetType="Label" x:Key="SectionLabel">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="#2D3748"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    <Style TargetType="Entry" x:Key="StyledEntry">
        <Setter Property="BackgroundColor" Value="#FFFFFF"/>
        <Setter Property="TextColor" Value="#2D3748"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style TargetType="Editor" x:Key="StyledEditor">
        <Setter Property="BackgroundColor" Value="#FFFFFF"/>
        <Setter Property="TextColor" Value="#2D3748"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary01}"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="HeightRequest" Value="44"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style TargetType="Button" x:Key="SecondaryButton">
        <Setter Property="BackgroundColor" Value="#E2E8F0"/>
        <Setter Property="TextColor" Value="#2D3748"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="HeightRequest" Value="44"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" x:Key="ContentPageBackgroundBrush">
        <GradientStop Color="#4e54c8" Offset="0.0" />
        <GradientStop Color="#8f94fb" Offset="1.0" />
    </LinearGradientBrush>
