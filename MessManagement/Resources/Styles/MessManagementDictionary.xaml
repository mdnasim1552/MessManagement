<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Light Theme Resources -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Primary">#4e54c8</Color>
    <Color x:Key="SectionLabelColor">#2D3748</Color>
    <Color x:Key="EntryTextColor">#2D3748</Color>
    <Color x:Key="SecondaryButtonBg">#E2E8F0</Color>
    <Color x:Key="SecondaryButtonText">#2D3748</Color>
    <Color x:Key="EditorTextColor">#2D3748</Color>
    <Color x:Key="PrimaryButtonText">#FFFFFF</Color>

    <!-- Dark Theme Resources -->
    <Color x:Key="WhiteDark">#1A202C</Color>
    <Color x:Key="PrimaryDark">#8f94fb</Color>
    <Color x:Key="SectionLabelColorDark">#E2E8F0</Color>
    <Color x:Key="EntryTextColorDark">#E2E8F0</Color>
    <Color x:Key="SecondaryButtonBgDark">#2D3748</Color>
    <Color x:Key="SecondaryButtonTextDark">#E2E8F0</Color>
    <Color x:Key="EditorTextColorDark">#E2E8F0</Color>
    <Color x:Key="PrimaryButtonTextDark">#1A202C</Color>
    
    <Style TargetType="FontImageSource" Class="appshelliconcolor">
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource Primary},Dark={StaticResource White}} "/>
    </Style>
    <Style TargetType="Grid" x:Key="FlyoutHeaderBackground" >
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDarkText}}"/>
    </Style>
    <!--#region Border -->
    <Style TargetType="Border" Class="PrimaryCardStyle">
        <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource WhiteDark}}"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="WidthRequest" Value="350"/>
        <Setter Property="MinimumHeightRequest" Value="400"/>
    </Style>
    <Style TargetType="Border" Class="MessWizardCardStyle">
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource WhiteDark}}"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource WhiteDark}}"/>
        <Setter Property="Padding" Value="14"/>
        <Setter Property="Margin" Value="0"/>
    </Style>
    <Style TargetType="Label" x:Key="SectionLabel">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource SectionLabelColor}, Dark={StaticResource SectionLabelColorDark}}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    <Style TargetType="Entry" x:Key="StyledEntry">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource WhiteDark}}"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource EntryTextColor}, Dark={StaticResource EntryTextColorDark}}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style TargetType="Editor" x:Key="StyledEditor">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource WhiteDark}}"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource EditorTextColor}, Dark={StaticResource EditorTextColorDark}}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="TextColor" Value="{StaticResource PrimaryButtonText}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="HeightRequest" Value="44"/>
    </Style>
    <Style TargetType="Button" x:Key="SecondaryButton">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SecondaryButtonBg}, Dark={StaticResource SecondaryButtonBgDark}}"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource SecondaryButtonText}, Dark={StaticResource SecondaryButtonTextDark}}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="HeightRequest" Value="44"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" x:Key="ContentPageBackgroundBrush">
        <GradientStop Color="{AppThemeBinding Light=#4e54c8, Dark=#1A202C}" Offset="0.0" />
        <GradientStop Color="{AppThemeBinding Light=#8f94fb, Dark=#4e54c8}" Offset="1.0" />
    </LinearGradientBrush>
    <!--#endregion-->
</ResourceDictionary>