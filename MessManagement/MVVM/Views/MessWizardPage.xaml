<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessManagement.MVVM.Views.MessWizardPage"
             xmlns:Converters="clr-namespace:MessManagement.Converters"
             Title="Mess Wizard"
             BackgroundColor="#F7F8FA">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Converters:IndexToMemberHeadingConverter x:Key="IndexToHeadingConverter" />
            <Style TargetType="Label" x:Key="SectionLabel">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#2D3748"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>
            <Style TargetType="Entry" x:Key="StyledEntry">
                <Setter Property="BackgroundColor" Value="#FFFFFF"/>
                <Setter Property="TextColor" Value="#2D3748"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="HeightRequest" Value="40"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
            <Style TargetType="Editor" x:Key="StyledEditor">
                <Setter Property="BackgroundColor" Value="#FFFFFF"/>
                <Setter Property="TextColor" Value="#2D3748"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
            <Style TargetType="Button" x:Key="PrimaryButton">
                <Setter Property="BackgroundColor" Value="#3182CE"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HeightRequest" Value="44"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="0,8,0,0"/>
            </Style>
            <Style TargetType="Button" x:Key="SecondaryButton">
                <Setter Property="BackgroundColor" Value="#E2E8F0"/>
                <Setter Property="TextColor" Value="#2D3748"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HeightRequest" Value="44"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="0,8,0,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid Padding="24" RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Step 1 -->
        <ScrollView IsVisible="{Binding IsStep1Visible}">
            <VerticalStackLayout Spacing="16">
                <Label Text="Step 1 - Create Mess" Style="{StaticResource SectionLabel}" />

                <Border BackgroundColor="#FFFFFF"
                    Stroke="#FFFFFF"
                    StrokeShape="RoundRectangle 12"
                    Padding="18"
                    Margin="0">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Mess Name:" FontAttributes="Bold" TextColor="#4A5568"/>
                        <Entry Text="{Binding MessName}" Placeholder="Enter mess name" Style="{StaticResource StyledEntry}" />

                        <Label Text="Description:" FontAttributes="Bold" TextColor="#4A5568"/>
                        <Editor Text="{Binding Description}" Placeholder="Enter description" AutoSize="TextChanges" Style="{StaticResource StyledEditor}"/>

                        <Label Text="Month:" FontAttributes="Bold" TextColor="#4A5568"/>
                        <DatePicker Date="{Binding Month}" TextColor="#2D3748" Margin="0,0,0,8"/>

                        <Button Text="Next â¡" Command="{Binding NextButtonCommand}"
                                Style="{StaticResource PrimaryButton}"
                                HorizontalOptions="End"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Step 2 -->
        <Grid IsVisible="{Binding IsStep2Visible}" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="Step 2 - Add Members" Style="{StaticResource SectionLabel}" />

            <Border Grid.Row="1"
                    BackgroundColor="#FFFFFF"
                    Stroke="#FFFFFF"
                    StrokeShape="RoundRectangle 12"
                    Padding="10"
                    Margin="0">
                <CollectionView x:Name="MemberCollection" ItemsSource="{Binding Members}" VerticalOptions="Fill">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#CBD5E1" StrokeThickness="1" Padding="10" Margin="5"
                                    BackgroundColor="#F1F5F9"
                                    StrokeShape="RoundRectangle 8">
                                <VerticalStackLayout Spacing="8" Padding="0,6">
                                    <Label Text="{Binding Heading}" FontAttributes="Bold" FontSize="16" TextColor="#2B6CB0"/>
                                    <Entry Placeholder="Name" Text="{Binding Name}" Style="{StaticResource StyledEntry}" />
                                    <Entry Placeholder="Email" Text="{Binding Email}" Style="{StaticResource StyledEntry}" />
                                    <Picker Title="Role" SelectedItem="{Binding Role}" Margin="0,0,0,8">
                                        <Picker.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Manager</x:String>
                                                <x:String>Editor</x:String>
                                                <x:String>Member</x:String>
                                            </x:Array>
                                        </Picker.ItemsSource>
                                    </Picker>
                                    <Button Text="ğŸ—‘ Delete"
                                            TextColor="Red"
                                            BackgroundColor="#FFF5F5"
                                            FontAttributes="Bold"
                                            Command="{Binding BindingContext.RemoveMemberCommand, Source={x:Reference MemberCollection}}"
                                            CommandParameter="{Binding .}"
                                            CornerRadius="8"
                                            HeightRequest="36"
                                            FontSize="14"/>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>

            <Button Grid.Row="2" Text="+ Add Another Member" Command="{Binding AddMemberButtonCommand}" Style="{StaticResource PrimaryButton}" />

            <HorizontalStackLayout HorizontalOptions="End" Spacing="12" Grid.Row="3">
                <Button Text="Back" Command="{Binding BackButtonCommand}" Style="{StaticResource SecondaryButton}"/>
                <Button Text="Finish" Command="{Binding FinishButtonCommand}" Style="{StaticResource PrimaryButton}" />
            </HorizontalStackLayout>
        </Grid>
    </Grid>
</ContentPage>