<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessManagement.MVVM.Views.MessWizardPage"
             xmlns:Converters="clr-namespace:MessManagement.Converters"
             Title="Mess Wizard"
             BackgroundColor="#F7F8FA">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Converters:IndexToMemberHeadingConverter x:Key="IndexToHeadingConverter" />
            
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid Padding="24" RowSpacing="24">
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>-->
        <!-- Step 1 -->
        <Grid IsVisible="{Binding IsStep1Visible}" Grid.Row="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Text="Step 1 - Create Mess" Grid.Row="0" Style="{StaticResource SectionLabel}" />

            <Border class="MessWizardCardStyle" Grid.Row="1">
                <Border Stroke="#CBD5E1" StrokeThickness="1" Padding="10" Margin="5" HeightRequest="300" VerticalOptions="Start"
                     BackgroundColor="#F1F5F9"
                     StrokeShape="RoundRectangle 8">
                    <VerticalStackLayout Spacing="8" Padding="0,6">
                        <Label Text="Mess Name:" FontAttributes="Bold" TextColor="#4A5568"/>
                        <Entry Text="{Binding MessName}" Placeholder="Enter mess name" Style="{StaticResource StyledEntry}" />

                        <Label Text="Description:" FontAttributes="Bold" TextColor="#4A5568"/>
                        <Editor Text="{Binding Description}" Placeholder="Enter description" AutoSize="TextChanges" Style="{StaticResource StyledEditor}"/>

                        <Label Text="Month:" FontAttributes="Bold" TextColor="#4A5568"/>
                        <DatePicker Date="{Binding Month}" TextColor="#2D3748" Margin="0,0,0,8"/>

                        
                    </VerticalStackLayout>
                </Border>
                
            </Border>
            <Button Text="Next" Command="{Binding NextButtonCommand}" Grid.Row="2"
                Style="{StaticResource PrimaryButton}"
                HorizontalOptions="End"/>
        </Grid>

        <!-- Step 2 -->
        <Grid IsVisible="{Binding IsStep2Visible}" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="Step 2 - Add Members" Style="{StaticResource SectionLabel}" />

            <Border Grid.Row="1"
                    class="MessWizardCardStyle">
                <CollectionView x:Name="MemberCollection" ItemsSource="{Binding Members}" VerticalOptions="Fill">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#CBD5E1" StrokeThickness="1" Padding="10" Margin="5"
                                    BackgroundColor="#F1F5F9"
                                    StrokeShape="RoundRectangle 8">
                                <VerticalStackLayout Spacing="8" Padding="0,6">
                                    <Label Text="{Binding Heading}" FontAttributes="Bold" FontSize="16" TextColor="{StaticResource Primary01}"/>
                                    <Entry Placeholder="Name" Text="{Binding Name}" Style="{StaticResource StyledEntry}" />
                                    <Entry Placeholder="Email" Text="{Binding Email}" Style="{StaticResource StyledEntry}" />
                                    <Picker Title="Role" SelectedItem="{Binding Role}" Margin="0,0,0,8">
                                        <Picker.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Manager</x:String>
                                                <x:String>Editor</x:String>
                                                <x:String>Member</x:String>
                                            </x:Array>
                                        </Picker.ItemsSource>
                                    </Picker>
                                    <Button Text="ğŸ—‘ Delete"
                                            TextColor="Red"
                                            BackgroundColor="#FFF5F5"
                                            FontAttributes="Bold"
                                            Command="{Binding BindingContext.RemoveMemberCommand, Source={x:Reference MemberCollection}}"
                                            CommandParameter="{Binding .}"
                                            CornerRadius="8"
                                            HeightRequest="36"
                                            FontSize="14"/>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>

            <Button Grid.Row="2" Text="+ Add Another Member" Command="{Binding AddMemberButtonCommand}" Style="{StaticResource PrimaryButton}" Margin="0,8,0,0" />

            <HorizontalStackLayout HorizontalOptions="End" Spacing="12" Grid.Row="3">
                <Button Text="Back" Command="{Binding BackButtonCommand}" Style="{StaticResource SecondaryButton}" Margin="0,8,0,0"/>
                <Button Text="Finish" Command="{Binding FinishButtonCommand}" Style="{StaticResource PrimaryButton}" Margin="0,8,0,0" />
            </HorizontalStackLayout>
        </Grid>
    </Grid>
</ContentPage>