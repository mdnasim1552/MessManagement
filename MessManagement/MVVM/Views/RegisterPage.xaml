<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessManagement.MVVM.Views.RegisterPage"
             x:DataType="vm:RegisterViewModel"
             xmlns:vm="clr-namespace:MessManagement.MVVM.ViewModels"
             Title="Register"
             Background="{AppThemeBinding Light=#F7F8FA,Dark=black}">
    <Grid>
        <Border
           class="PrimaryCardStyle">
            <VerticalStackLayout Spacing="20">
                <Label Text="Create Account"
                        FontSize="24"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Primary}"
                        HorizontalOptions="Center"
                        Margin="0,0,0,10"/>

                <Entry Placeholder="Full Name"
                    Text="{Binding Fullname}"
                    Keyboard="Default"
                    BackgroundColor="{AppThemeBinding Light=#f3f4f6,Dark=black}"
                    Margin="0,0,0,5"
                    HeightRequest="45"/>

                <Entry Placeholder="Email"
                   Text="{Binding Email}"
                   Keyboard="Email"
                   BackgroundColor="{AppThemeBinding Light=#f3f4f6,Dark=black}"
                   Margin="0,0,0,5"
                   HeightRequest="45" />
                <Entry Placeholder="Password"
                    Text="{Binding Password}"
                    IsPassword="True"
                    BackgroundColor="{AppThemeBinding Light=#f3f4f6,Dark=black}"
                    Margin="0,0,0,5"
                    HeightRequest="45"/>
                
                <Button Text="Register"
                     Command="{Binding RegisterCommand}"
                     Style="{StaticResource PrimaryButton}" />
                
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>