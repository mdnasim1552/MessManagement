<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="MessManagement.MVVM.Views.LoginPage"
                 xmlns:icons="clr-namespace:MessManagement.MVVM.Models"
                 Title="Login"
                 Background="{AppThemeBinding Light=#F7F8FA,Dark=black}">
    <Grid>
        <Border
            class="PrimaryCardStyle">
            <VerticalStackLayout Spacing="20">

                <!-- Use Label with FontImageSource for icon font -->
                <Image>
                    <Image.Source>
                        <FontImageSource
                                Glyph="{x:Static icons:IconFont.Login}"
                                FontFamily="MaterialIcons"
                                Size="70"
                                Color="{AppThemeBinding Light={StaticResource Primary},Dark=white}" />
                    </Image.Source>
                </Image>

                <Label Text="Welcome Back!"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="{AppThemeBinding Light={StaticResource Primary},Dark=white}"
                    HorizontalOptions="Center"
                    Margin="0,0,0,10"/>

                <Entry Placeholder="Email"
                    Text="{Binding Email}"
                    Keyboard="Email"
                    BackgroundColor="{AppThemeBinding Light=#f3f4f6,Dark=black}"
                    Margin="0,0,0,5"
                    HeightRequest="45"/>

                <Entry Placeholder="Password"
                    Text="{Binding Password}"
                    IsPassword="True"
                    BackgroundColor="{AppThemeBinding Light=#f3f4f6,Dark=black}"
                    Margin="0,0,0,5"
                    HeightRequest="45"/>

                <Button Text="Login"
                     Command="{Binding LoginCommand}"
                     Style="{StaticResource PrimaryButton}"/>

                <Button Text="Continue with Google"
                     Command="{Binding GoogleLoginCommand}"
                     BackgroundColor="{AppThemeBinding Light=#f3f4f6,Dark=black}"
                     TextColor="{AppThemeBinding Light=black,Dark=white}"
                     CornerRadius="10"
                     HeightRequest="45"
                     Margin="0,5,0,0"
                     ImageSource="google_icon.png"/>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,10,0,0">
                    <Label Text="Don't have an account?" TextColor="#888" />
                    <Button Text="Register"
                         Command="{Binding RegisterCommand}"
                         BackgroundColor="Transparent"
                         TextColor="{AppThemeBinding Light=#4e54c8,Dark=white}"
                         FontAttributes="Bold"
                         Padding="0"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>  