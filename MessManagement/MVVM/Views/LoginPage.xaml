<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessManagement.MVVM.Views.LoginPage"
             Title="Login"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="#F7F8FA"
             Shell.TitleColor="Black"
             Shell.ForegroundColor="White"
             BackgroundColor="#F7F8FA">
    <Grid>
        <Border
        class="PrimaryCardStyle">
            <VerticalStackLayout Spacing="20">

                <Image Source="login_icon.png"
                HeightRequest="70"
                HorizontalOptions="Center"
                Margin="0,0,0,10"/>

                <Label Text="Welcome Back!"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="{StaticResource Primary01}"
                HorizontalOptions="Center"
                Margin="0,0,0,10"/>

                <Entry Placeholder="Email"
                Text="{Binding Email}"
                Keyboard="Email"
                BackgroundColor="#f3f4f6"
                Margin="0,0,0,5"
                HeightRequest="45"/>

                <Entry Placeholder="Password"
                Text="{Binding Password}"
                IsPassword="True"
                BackgroundColor="#f3f4f6"
                Margin="0,0,0,5"
                HeightRequest="45"/>

                <Button Text="Login"
                 Command="{Binding LoginCommand}"
                 Style="{StaticResource PrimaryButton}"/>

                <Button Text="Continue with Google"
                 Command="{Binding GoogleLoginCommand}"
                 BackgroundColor="#f3f4f6"
                 TextColor="Black"
                 CornerRadius="10"
                 HeightRequest="45"
                 Margin="0,5,0,0"
                 ImageSource="google_icon.png"/>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,10,0,0">
                    <Label Text="Don't have an account?" TextColor="#888" />
                    <Button Text="Register"
                     Command="{Binding RegisterCommand}"
                     BackgroundColor="Transparent"
                     TextColor="#4e54c8"
                     FontAttributes="Bold"
                     Padding="0"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>